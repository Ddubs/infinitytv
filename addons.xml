<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.itv_wizard" version="0.0.1"
	name="INFINITY TV Wizard" provider-name="None">
	<requires>
		<import addon="xbmc.python" version="2.1.0"/>
		<import addon="script.module.addon.common" optional="true" />
		<import addon="script.module.t0mm0.common" optional="true" />
		<import addon="script.module.urlresolver" optional="true" />
	</requires>
	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>INFINTY TV Wizard</summary>
		<description>Instantly configure your xbmc experience with all the best add-ons and goodies!  </description>
		<platform>all</platform>
		<forum></forum>
		<website></website>
	</extension>
</addon>

<addon id="repository.infinitytv" name="INFINITY TV XBMC Plugins" version="1.0.0" provider-name="INFINITY TV">
	<extension point="xbmc.addon.repository" name="INFINITY TV XBMC Plugins">
		<info compressed="false">https://raw.githubusercontent.com/Ddubs/infinitytv/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/Ddubs/infinitytv/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/Ddubs/infinitytv/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Add-ons from INFINITY TV Repository</summary>
		<description>INFINITY TV video plug-ins for XBMC</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>

<addon id="script.module.urlresolver"
     name="urlresolver"
     version="2.5.0"
     provider-name="Eldorado">
  <requires>
    <import addon="xbmc.python" version="2.1.0" />
    <import addon="script.module.t0mm0.common" version="2.0.0"/>
    <import addon="plugin.video.youtube" version="4.4.7"/>
  </requires>
  <extension point="xbmc.python.module" library="lib" />
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Resolve common video host URL's to be playable in XBMC.</summary>
    <description lang="en">Resolve common video host URL's to be playable in XBMC, simplify addon development of video plugins requiring multi video hosts.</description>
  </extension>
</addon>

<addon id="script.video.newparentalcontrols" name="ITV Parental Controls" version="1.5.4" provider-name="killdash9">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.script" library="resources/lib/parentalcontrols/settings.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="resources/lib/parentalcontrols/service.py" start="login">
  </extension>
  <extension point="xbmc.python.module"
             library="resources/lib" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Parental Controls</summary>
    <description lang="en">A parental controls addon.  Works only with sources that provide ratings such as HULU.</description>
    <platform>all</platform>
  </extension>
</addon>

<addon
  id="skin.infinitytv"
  version="0.0.2"
  name="INFINITY TV"
  provider-name="INFINITY TV">
	<requires>
		<import addon="xbmc.gui" version="5.0.0"/>
		<import addon="script.grab.fanart" version="0.12.8"/>
		<import addon="script.skinshortcuts" version="0.2.4"/>
		<import addon="service.library.data.provider" version="0.0.1"/>
	</requires>
	<extension
	  point="xbmc.gui.skin"
	  defaultthemename="textures.xbt"
	  debugging="false"
	  effectslowdown="0.75">
		<res width="1920" height="1080" aspect="16:9" default="true" folder="1080i" />
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>INFINITY TV skin</summary>
		<description>INFINITY TV skin: Completely redesigned to create a modern look</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
